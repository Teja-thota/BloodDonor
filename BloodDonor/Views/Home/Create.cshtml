@model BloodDonor.Models.Blood

@{
    ViewData["Title"] = "Create Blood Record";
}

<h1>Create Blood Record</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BloodType"></label>
        <select id="bloodGroup" name="bloodType" required>
            <option value="">--Choose--</option>
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
        </select>
        @* <input asp-for="BloodType" class="form-control" /> *@
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Save</button>
    
</form>
